## New 

library(data.table)

# Specify column types if known
column_types <- list(col1 = "character", col2 = "numeric", col3 = "factor")

# Read the CSV using fread from data.table
Trade_DetailedTradeMatrix_E_All_Data_NOFLAG <- fread("C:/Users/dell/OneDrive - Kansas State University/EUDR/Data/Share of exports to the EU and the UK/Trade_DetailedTradeMatrix_E_All_Data/Trade_DetailedTradeMatrix_E_All_Data_NOFLAG.csv",
                                                     skip = 1,            # Skip header if necessary
                                                     colClasses = column_types,
                                                     data.table = FALSE) # Convert to data.frame if necessary





##1. Coffee ####
coffee_value1 <- Trade_DetailedTradeMatrix_E_All_Data_NOFLAG %>% filter(Item.Code %in% c(656:660), Element %in% c("Export Quantity", "Export Value"), Reporter.Countries %in% c("Brazil", "Colombia", "Malaysia", "Indonesia", "Ghana", "C么te d'Ivoire")) %>% select(c(Reporter.Countries, Partner.Countries, Y2015, Y2016, Y2017, Y2018, Item.Code, Item, Element)) %>% pivot_longer(cols = -c(Reporter.Countries, Partner.Countries, Item.Code, Item, Element), names_to = "Year", values_to = "Value")

coffee_value1[is.na(coffee_value1)] <- 0

coffee_export <- coffee_value1 %>% group_by(Reporter.Countries, Item.Code, Year, Element, Item) %>% summarise(Total_export = sum(Value)) %>% rename(Area = Reporter.Countries) %>% pivot_wider(names_from = "Element", values_from = c(Total_export))

coffee_prod1 <- Production_Crops_Livestock_E_All_Data_NOFLAG %>% filter(Item.Code %in% c(656:660), Element == "Production", Area %in% c("Brazil", "Colombia", "Malaysia", "Indonesia", "Ghana", "C么te d'Ivoire")) %>% select(c(Area, Item.Code, Item, Y2015, Y2016, Y2017, Y2018)) %>% pivot_longer(cols = -c(Area, Item.Code, Item), names_to = "Year", values_to = "Value") %>% rename(Total_production = Value)

coffee_prod1[is.na(coffee_prod1)] <- 0

coffee1 <- full_join(coffee_prod1, coffee_export, by = c("Area", "Year", "Item.Code", "Item")) %>% mutate(Export_share_production = `Export Quantity`/Total_production) %>% group_by(Area, Year) %>% summarise(Export_share_value = `Export Value`/sum(`Export Value`))

coffee1[is.na(coffee1)] <- 0

coffee <- coffee1 %>% group_by(Area, Item.Code, Item) %>% summarise(Total_production = sum(Total_production), `Export Quantity` = sum(`Export Quantity`), `Export Value` = sum(`Export Value`), Export_share_production) %>% mutate(Export_share_production = `Export Quantity`/Total_production) %>% group_by(Area) %>% summarise(Export_share_value = `Export Value`/sum(`Export Value`))


commodity <- function(Trade_DetailedTradeMatrix_E_All_Data_NOFLAG, Item.Code, Element, Reporter.Countries, Partner.Countries, Y2015, Y2016, Y2017, Y2018, Item, Year, Value, Total_export, Production_Crops_Livestock_E_All_Data_NOFLAG, Area, Export Quantity, Total_production, Export Value, Export_share_production) {
  coffee_value1 <- Trade_DetailedTradeMatrix_E_All_Data_NOFLAG %>% filter(Item.Code %in% c(656:660), Element %in% c("Export Quantity", "Export Value"), Reporter.Countries %in% c("Brazil", "Colombia", "Malaysia", "Indonesia", "Ghana", "C么te d'Ivoire")) %>% select(c(Reporter.Countries, Partner.Countries, Y2015, Y2016, Y2017, Y2018, Item.Code, Item, Element)) %>% pivot_longer(cols = -c(Reporter.Countries, Partner.Countries, Item.Code, Item, Element), names_to = "Year", values_to = "Value")
  
  coffee_value1[is.na(coffee_value1)] <- 0
  
  coffee_export <- coffee_value1 %>% group_by(Reporter.Countries, Item.Code, Year, Element, Item) %>% summarise(Total_export = sum(Value)) %>% rename(Area = Reporter.Countries) %>% pivot_wider(names_from = "Element", values_from = c(Total_export))
  
  coffee_prod1 <- Production_Crops_Livestock_E_All_Data_NOFLAG %>% filter(Item.Code %in% c(656:660), Element == "Production", Area %in% c("Brazil", "Colombia", "Malaysia", "Indonesia", "Ghana", "C么te d'Ivoire")) %>% select(c(Area, Item.Code, Item, Y2015, Y2016, Y2017, Y2018)) %>% pivot_longer(cols = -c(Area, Item.Code, Item), names_to = "Year", values_to = "Value") %>% rename(Total_production = Value)
  
  coffee_prod1[is.na(coffee_prod1)] <- 0
  
  coffee1 <- full_join(coffee_prod1, coffee_export, by = c("Area", "Year", "Item.Code", "Item")) %>% mutate(Export_share_production = `Export Quantity`/Total_production) %>% group_by(Area, Year) %>% mutate(Export_share_value = `Export Value`/sum(`Export Value`))
  
  coffee1[is.na(coffee1)]
  
  coffee <- coffee1 %>% group_by(Area, Item.Code, Item) %>% summarise(Total_production = sum(Total_production), `Export Quantity` = sum(`Export Quantity`), `Export Value` = sum(`Export Value`), Export_share_production) %>% mutate(Export_share_production = `Export Quantity`/Total_production) %>% group_by(Area) %>% mutate(Export_share_value = `Export Value`/sum(`Export Value`))
}








##1. Coffee ####
coffee_value1 <- Trade_DetailedTradeMatrix_E_All_Data_NOFLAG %>% filter(Item.Code %in% c(656:660), Element == "Export Quantity") %>% select(c(Reporter.Countries, Partner.Countries, Y1986, Y1987, Y1988, Y1989, Y1990, Y1991, Y1992, Y1993, Y1994, Y1995, Y1996, Y1997, Y1998, Y1999, Y2000, Y2001, Y2002, Y2003, Y2004, Y2005, Y2006, Y2007, Y2008, Y2009, Y2010, Y2011, Y2012, Y2013, Y2014, Y2015, Y2016, Y2017, Y2018, Y2019, Y2020, Y2021)) %>% pivot_longer(cols = -c(Reporter.Countries, Partner.Countries), names_to = "Year", values_to = "Value") 
coffee_export <- coffee_value1 %>% group_by(Reporter.Countries, Year) %>% summarise(Total_export = sum(Value)) %>% rename(Area = Reporter.Countries)
coffee_prod1 <- Production_Crops_Livestock_E_All_Data_NOFLAG %>% filter(Item.Code %in% c(656:660), Element == "Production") %>% select(c(Area, Y1986, Y1987, Y1988, Y1989, Y1990, Y1991, Y1992, Y1993, Y1994, Y1995, Y1996, Y1997, Y1998, Y1999, Y2000, Y2001, Y2002, Y2003, Y2004, Y2005, Y2006, Y2007, Y2008, Y2009, Y2010, Y2011, Y2012, Y2013, Y2014, Y2015, Y2016, Y2017, Y2018, Y2019, Y2020, Y2021)) %>% pivot_longer(cols = -c(Area), names_to = "Year", values_to = "Value") 
coffee_prod <- coffee_prod1 %>% group_by(Area, Year) %>% summarise(Total_production = sum(Value))
coffee_production_export <- merge(coffee_prod, coffee_export, by = c("Area", "Year")) %>% mutate(share_prod_exp = Total_export/Total_production, Commodity = "Coffee")
coffee_production_export_Brazil <- coffee_production_export %>% filter(Area == "Brazil", Year == "Y2021") 
coffee_brazil <- coffee_export %>% filter(Area == "Brazil", Year == "Y2021")

